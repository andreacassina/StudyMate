@model IEnumerable<StudyMate.Models.EventViewModel>

@{
    ViewData["Title"] = "View";
}

<h1>Lessons</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Ora inizio
            </th>
            <th>
                Ora fine
            </th>
            <th>
                Corso
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.StartDate.Date.ToShortDateString()
            </td>
            <td>
                @item.StartDate.TimeOfDay
            </td>
            <td>
                @item.EndDate.TimeOfDay
            </td>
            <td>
                @item.Description
            </td>
        </tr>
}
    </tbody>
</table>
